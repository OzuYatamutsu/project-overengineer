{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate vault certificate",
      "type": "shell",
      "command": "vault/generate-vault-cert.sh",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Start infra dependencies",
      "type": "shell",
      "dependsOn": "Generate vault certificate",
      "command": "REDIS_HOST=localhost REDIS_PORT=6379 REDIS_PASSWORD=b4yscx92yksfyv9c VAULT_HOST=localhost VAULT_PORT=8200 VAULT_RO_TOKEN=root docker compose up redis ollama-ocr vault --remove-orphans",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Vault server started!",
          }
        }
      ]
    },
    {
      "label": "Stop infra dependencies",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "env": {
          "SENTINEL_HOST": "",
          "SENTINEL_PORT": "",
          "REDIS_PASSWORD": "",
          "STATUS_API_URL": ""
        }
      },
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
