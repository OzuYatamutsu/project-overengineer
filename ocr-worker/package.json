{
  "name": "@project-overengineer/ocr-worker",
  "version": "1.3.0",
  "description": "An OCR service worker that parses images into structured text",
  "main": "worker.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only worker.ts",
    "build": "tsc && cp tests/test-image.base64 dist/tests",
    "start": "node dist/server.js",
    "lint": "eslint *.ts",
    "test": "pnpm build && TS_NODE_TRANSPILE_ONLY=1 playwright test -c playwright.config.ts"
  },
  "dependencies": {
    "@project-overengineer/shared-lib": "workspace:*",
    "undici": "^7.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.39.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
