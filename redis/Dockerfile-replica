FROM redis:7

ENV REDIS_PORT="${REDIS_REPLICA_PORT:-6379}"
ENV REDIS_HOST="${REDIS_HOST:-redis}"
ENV REDIS_MASTER_PORT="${REDIS_MASTER_PORT:-6379}"
ENV REDIS_MASTER_PASSWORD="${REDIS_MASTER_PASSWORD:-b4yscx92yksfyv9c}"

CMD sh -c \
    "redis-server " \
    "--bind 0.0.0.0 " \
    "--port ${REDIS_REPLICA_PORT} " \
    "--replicaof ${REDIS_HOST} ${REDIS_MASTER_PORT} " \
    "--masterauth ${REDIS_PASSWORD}"
